@model IEnumerable<Management_Inventory.Models.ProductViewModel>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"> Quản lý sản phẩm</h4>
                    <div class="col-md-12 ml-2">
                        <a href="@Url.Action("Create", "Product")" class="btn btn-primary ">Thêm</a>
                    </div>
                    <div class="card-header">
                        <table class="table">
                            <thead class=" text-primary">
                                <tr>
                                    <th>Mã</th>
                                    <th>
                                        Tên sản phẩm
                                    </th>
                                    <th>
                                        Tên danh mục
                                    </th>
                                    <th>
                                        Giá tiền
                                    </th>
                                    <th>
                                        Mô tả
                                    </th>
                                    <th>
                                        Trạng thái
                                    </th>
                                    <th>
                                        Đơn vị
                                    </th>
                                    <th>

                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="tdtable">
                                        @item.ProductId
                                    </td>
                                    <td class="tdtable">
                                        @item.Name
                                    </td>
                                    <td class="tdtable2">
                                        @item.listCate.FirstOrDefault().Name
                                    </td>
                                    <td>
                                        @item.Price
                                    </td>
                                    <td>
                                        @item.Describe
                                    </td>
                                    <td>
                                        @item.isActive
                                    </td>
                                    <td>
                                        @item.listUnit.FirstOrDefault().UnitName
                                    </td>
                                    <td>
                                        &nbsp;&nbsp;
                                        <a href="@Url.Action("Details", "Product", new { id = item.ProductId})" data-toggle="tooltip" title="Chỉnh sửa"><i class="fas fa-edit icon"></i></a>
                                    </td>
                                    <td>
                                        &nbsp; &nbsp;
                                        <a href="@Url.Action("Delete", "Product", new { id= item.ProductId})" data-toggle="tooltip" title="Thông tin thêm"><i class="fas fa-trash icon"></i></a>

                                    </td>

                                </tr>

                                }
                            </tbody>
                        </table>
                    </div>



                </div>
            </div>


        <!-- Phân trang -->
        <div class="customPagination">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <footer class="footer footer-black  footer-white ">
            <div class="container-fluid">
                <div class="row">

                    <div class="credits ml-auto">
                        <span class="copyright">
                            ©
                            <script>
                    document.write(new Date().getFullYear())
                            </script>, made with <i class="fa fa-heart heart"></i> by TN
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>